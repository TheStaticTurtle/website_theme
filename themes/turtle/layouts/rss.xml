{{- $pctx := . -}}
{{- $pages := where .Site.RegularPages "Section" "posts" -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}

{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}

{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}


{{ $pageTitle := $.Site.Title }}
{{ if ne $.Title $.Site.Title }}
    {{ $pageTitle = (print $.Site.Title " - " $.Title) }}
{{ end }}

<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/" >
  <channel>
    {{- (printf "<title><![CDATA[ %s ]]></title>" $pageTitle)  | safeHTML }}
    {{- (printf "<description><![CDATA[ %s ]]></description>" (index .Site.Params "description" | default .Title))  | safeHTML }}
    <link>{{ .Permalink }}</link>

    {{ with (index .Site.Params "rss" "image")  }}
        {# with partial "_get_masked_image_url.html" (dict "res" (resources) "src" . "dim" "512x512 jpg q100") #}
            <image> 
                <url>{{ . | safeURL }}</url>
                <title>{{ $pageTitle }}</title>
                <link>{{ $.Permalink }}</link>
            </image>
        {# end #}
    {{end}}

    <generator>Hugo</generator>

    {{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
    {{ end }}

    {{- with .OutputFormats.Get "RSS" -}}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end -}}
    
    {{ with (index .Site.Params "rss" "ttl")  }}
        <ttl>{{ . }}</ttl>
    {{end}}

    {{ with .Site.LanguageCode }}
        <language>{{.}}</language>
    {{end}}

    {{ with (index .Site.Params "rss" "managingEditor")  }}
        <managingEditor>{{ index . "email" }}{{ with index . "name" }} ({{.}}){{end}}</managingEditor>
    {{end}}
    {{ with (index .Site.Params "rss" "managingEditor")  }}
        <webMaster>{{ index . "email" }}{{ with index . "name" }} ({{.}}){{end}}</webMaster>
    {{end}}
        
    {{ with .Site.Copyright }}
        <copyright>{{.}}</copyright>
    {{end}}

    {{ range $pages }}
        <item>
            {{- (printf "<title><![CDATA[ %s ]]></title>" .Title)  | safeHTML }}
            {{- (printf "<description><![CDATA[ %s ]]></description>" .Summary)  | safeHTML }}
            <link>{{ .Permalink }}</link>
            <guid>{{ .Permalink }}</guid>
            {{ range .Params.tags }}
                {{ with $.Site.GetPage (printf "/%s/%s" "tags" .) }}
                    {{- (printf "<category><![CDATA[ %s ]]></category>" (.Title | humanize))  | safeHTML }}
                {{ end }}
            {{ end }}
            {{ with index .Params.authors 0 }}
                {{ with $.Site.GetPage (printf "/%s/%s" "authors" .) }}
                    {{- (printf "<dc:creator><![CDATA[ %s ]]></dc:creator>" .Params.name)  | safeHTML }}
                {{ end }}
            {{ end }}
            <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
            

            {{- $ictx := . -}}
            {{ with .Resources.GetMatch .Params.image }}
                {{ $image := .Resize "1275x712 jpg q100" }}
                <media:thumbnail url="{{ $image.Permalink }}" />
                <media:content url="{{ $image.Permalink }}" medium="image" />

                {#<media:thumbnail url="{{ $ictx.Params.image | safeURL }}" />#}
                {#<media:content url="{{ $ictx.Params.image | safeURL }}" medium="image"></media:content>#}
            {{ else }}
                {{ warnf "[rss.xml] Coudln't get post thumbnail '%s' / %s" .Title .Params.image }}
                <media:thumbnail url='{{ (resources.Get "img/default_post_cover.png").Permalink }}' />
                <media:content url='{{ (resources.Get "img/default_post_cover.png").Permalink }}' medium="image"></media:content>
            {{ end }}


            {{ with partial "content/rss/_post_content.html" . }}
                {{- (printf "<content:encoded><![CDATA[ %s ]]></content:encoded>" .)  | safeHTML }}
            {{ end }}
        </item>
    {{ end }}
  </channel>
</rss>