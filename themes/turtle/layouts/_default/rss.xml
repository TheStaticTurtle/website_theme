{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}

<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/" >
  <channel>
    <title>{{ if eq .Title  .Site.Title }}{{ .Site.Title }}{{ else }}{{ .Site.Title }}{{ with .Title }} - {{.}}{{ end }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ index .Site.Params "description" | default .Title }}</description>
    <generator>Hugo + SSRTags</generator>

    {{ with (index .Site.Params "rss" "image")  }}
        <image>
            <url>{{ . }}</url>
            <title>{{ if eq $.Title $.Site.Title }}{{ $.Site.Title }}{{ else }}{{ $.Site.Title }}{{ with $.Title }} - {{.}}{{ end }}{{ end }}</title>
            <link>{{ $.Permalink }}</link>
        </image>
    {{end}}

    {{ with .Site.LanguageCode }}
        <language>{{.}}</language>
    {{end}}

    {{ with (index .Site.Params "rss" "managingEditor")  }}
        <managingEditor>{{ index . "email" }}{{ with index . "name" }} ({{.}}){{end}}</managingEditor>
    {{end}}
    {{ with (index .Site.Params "rss" "managingEditor")  }}
        <webMaster>{{ index . "email" }}{{ with index . "name" }} ({{.}}){{end}}</webMaster>
    {{end}}
        
    {{ with .Site.Copyright }}
        <copyright>{{.}}</copyright>
    {{end}}

    {{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{- with .OutputFormats.Get "RSS" -}}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end -}}
    
    {{ with (index .Site.Params "rss" "ttl")  }}
        <ttl>{{ . }}</ttl>
    {{end}}

    {{ range $pages }}
        <item>
            <title>{{ .Title }}</title>
            <dc:creator>{{ .Author }}</dc:creator>
            <link>{{ .Permalink }}</link>
            <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
            {{ with .Site.Author.email }}<author>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</author>{{end}}
            <guid>{{ .Permalink }}</guid>
            <description>{{ .Summary | html }}</description>
        </item>
    {{ end }}
  </channel>
</rss>