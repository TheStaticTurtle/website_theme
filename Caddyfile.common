(__website_cache) {
	header /sass/* {
		Cache-Control "public, max-age=3600"
	}
	header /fonts/* {
		Cache-Control "public, max-age=86400"
	}
	header /img/* {
		Cache-Control "public, max-age=2628000"
	}
	header /*/images/* {
		Cache-Control "public, max-age=2628000"
	}
}

(__website_fs_and_errors) {
	file_server {
		hide 404.html
	}

	handle_errors {
		@404 {
			expression {http.error.status_code} == 404
		}
		handle @404 {
			root /* public/
			rewrite * /404.html
			file_server
		}
	}
}
